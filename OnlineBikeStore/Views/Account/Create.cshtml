@model OnlineBikeStore.Models.AccountViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<link href="~/Content/Customer/login.css" rel="stylesheet" />
<section>
    <div class="container py-2">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="~/Images/Utilities/login_image.jpg"
                                 alt="login form" class="login-img" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                @using (Html.BeginForm("Create", "Account", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Create your account</h5>

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label class="control-label col-md">First Name</label>
                                        @Html.EditorFor(model => model.first_name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(x => x.first_name, "", new { @class = "text-danger" })
                                    </div>
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label class="control-label col-md">Last Name</label>
                                        @Html.EditorFor(model => model.last_name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(x => x.last_name, "", new { @class = "text-danger" })
                                    </div>
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label class="control-label col-md">Email Id</label>
                                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(x => x.email, "", new { @class = "text-danger" })
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label class="control-label col-md">Password</label>
                                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                    </div>                                                                        
                                    <div class="pt-1 mb-4">
                                        <button class="btn login-form-btn" type="submit">Register</button>
                                    </div>
                                }
                                <a class="small text-muted" href="#!">Forgot password?</a>
                                <div>
                                    Already registered?  @Html.ActionLink("Login", "Login", "Account") here.

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

