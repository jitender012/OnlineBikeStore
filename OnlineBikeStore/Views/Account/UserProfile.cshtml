@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

@model string
<link href="~/Content/Customer/userProfile.css" rel="stylesheet" />
<div class="parent">
    <div class="container">
        <div class="row parent">
            <div class="col-12 col-lg-3 mt-2 p-2 ">
                <div class="d-flex hello-user mb-3 bg-white box-shadow-outset" ">
                    <div class="">
                        <i class="far fa-user-circle" style=" height: 50px; width: 50px; color: #fc4a1a; margin: 0px 18px;"></i>

                    </div>
                    <div class=" flex-column " style=" text-align: center">
                        @if (Model != null)
                        {
                            <span style="font-size:20px;">@Model.ToString()</span>
                        }
                    </div>
                </div>
                <div class="mt-2">
                    <div class="mynav">

                        @Ajax.ActionLink("Profile Information", "UserInformation", "Account", new AjaxOptions
                           {
                               HttpMethod = "GET",
                               UpdateTargetId = "targetResult",
                               InsertionMode = InsertionMode.Replace
                           }, new { @class = "NS64GK", id = "profileLink" })

                        @Ajax.ActionLink("Wishlist", "WishlistIndex", "Wishlist", null, new AjaxOptions
                           {
                               HttpMethod = "GET",
                               UpdateTargetId = "targetResult",
                               InsertionMode = InsertionMode.Replace,
                               LoadingElementId = "loadingImage"
                           }, new { @class = "NS64GK" })

                        @Ajax.ActionLink("Reviews & Ratings", "Feedback", "Account", new AjaxOptions
                           {
                               HttpMethod = "GET",
                               UpdateTargetId = "targetResult",
                               InsertionMode = InsertionMode.Replace,
                               LoadingElementId = "loadingImage"
                           }, new { @class = "NS64GK" })

                        @Ajax.ActionLink("Notifications", "ManageAddress", "Account", new AjaxOptions
                           {
                               HttpMethod = "GET",
                               UpdateTargetId = "targetResult",
                               InsertionMode = InsertionMode.Replace

                           }, new { @class = "NS64GK" })

                        @Ajax.ActionLink("Logout", "ManageAddress", "Account", new AjaxOptions
                           {
                               HttpMethod = "GET",
                               UpdateTargetId = "targetResult",
                               InsertionMode = InsertionMode.Replace
                           }, new { @class = "NS64GK" })
                        <hr />
                        <div class="_15sjxS">
                            <i class="fa  fa-list-alt" style="color:black"></i>
                            <div class="_3vaeIJ">
                                My Orders
                            </div>
                        </div>
                    </div>
                    <div>
                        <hr />
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-8 mt-2 p-2">

                <div id="targetResult">
                </div>
            </div>
        </div>

    </div>
</div>
<script>

    $(document).ready(function () {
        // Perform the Ajax request to load the account details when the page loads


        $('.NS64GK').on('click', function () {
            $('.NS64GK').removeClass('active');
            $(this).addClass('active');
        });
        $("#profileLink").click();
    });

</script>


