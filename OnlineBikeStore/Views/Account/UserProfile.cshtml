
@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<style>
    body {
        font-family: Roboto, Arial, sans-serif;
        overflow: auto;
    }

   
</style>
<div class="parent">
    <div class="container-fluid mx-3">
        <div class="row parent">
            <div class="col-12 col-lg-3 mt-2">
                <div class="card m-2 px-5 py-1 ">
                    <p>Hello,</p>
                    <h5>User</h5>
                </div>
                <div class="card m-2 p-2 rounded-0  ">
                    <div>
                        <div class="_15sjxS">
                            <i class="fa fa-user fa-lg"></i>
                            <div class="_3vaeIJ">
                                Account Settings
                            </div>
                        </div>

                        <div>
                            <a>
                                <div class="NS64GK">
                                    @Ajax.ActionLink("Profile Information", "UserInformation", "Account", new AjaxOptions
                                       {
                                           HttpMethod = "GET",
                                           UpdateTargetId = "targetResult",
                                           InsertionMode = InsertionMode.Replace
                                       }, new { id = "profileLink" })
                                </div>
                            </a>

                            <a>
                                <div class="NS64GK">
                                    @Ajax.ActionLink("Reviews & Ratings", "Feedback","Account", new AjaxOptions
                                       {
                                           HttpMethod = "GET",
                                           UpdateTargetId = "targetResult",
                                           InsertionMode = InsertionMode.Replace,
                                           LoadingElementId = "loadingImage"
                                       })
                                </div>
                            </a>
                            <a>
                                <div class="NS64GK">
                                    @Ajax.ActionLink("Notifications", "ManageAddress", new AjaxOptions
                                       {
                                           HttpMethod = "GET",
                                           UpdateTargetId = "targetResult",
                                           InsertionMode = InsertionMode.Replace

                                       })
                                </div>
                            </a>
                            <a>
                                <div class="NS64GK">
                                    @Ajax.ActionLink("Logout", "ManageAddress", new AjaxOptions
                                       {
                                           HttpMethod = "GET",
                                           UpdateTargetId = "targetResult",
                                           InsertionMode = InsertionMode.Replace
                                       })
                                </div>
                            </a>
                        </div>
                        <hr />
                    </div>
                    <div>
                        <div class="_15sjxS">
                            <i class="fa  fa-list-alt" style="color:black"></i>
                            <div class="_3vaeIJ">
                                My Orders
                            </div>
                        </div>


                        <hr />
                    </div>
                </div>
            </div>
           
            <div class="col-12 col-lg-8  m-2 mt-2 ">    
                
                <div id="targetResult" class="">
                </div>
            </div>
        </div>

    </div>
</div>
<script>

  $(document).ready(function () {
     // Perform the Ajax request to load the account details when the page loads
 
      $("#profileLink").click();

 });

</script>


