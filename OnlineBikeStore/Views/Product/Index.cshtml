@model IEnumerable<OnlineBikeStore.Models.ProductViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    td {
        vertical-align: middle;      
    }
    #myTable th, #myTable td {
        text-align: center;
    }
    thead {
        background-color: dodgerblue;
    }

   
</style>

<!-- Display TempData messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["NotFound"] != null)
{
    <div class="alert alert-warning">
        @TempData["NotFound"]
    </div>
}

<div class="d-flex justify-content-between align-items-end">
    <div>

        <a style=" color: #6ebb4a; font-size: 14px; font-weight: 600;">
            Home
            <i class="fas fa-angle-right" style="color: #c1cdc2;"></i>

        </a>
        <h4>
            Products
        </h4>
    </div>
    <div>
        <a href="@Url.Action("Create New", "Create")" class="addNewBtn">
            <i class="bi bi-plus-circle"></i>
            Add New Product
        </a>
    </div>
</div>


<table class="table table-striped " id="myTable">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Image
            </th>
            <th>Actions</th>
        </tr>
    </thead>


    @foreach (var item in Model)
    {
        <tr id="@item.product_id">
            <td>
                @Html.DisplayFor(modelItem => item.product_name)
            </td>
            <td>
                @if (item.url != null)
                {

                    <img src="@Url.Content(item.url)" alt="Alternate Text" style="max-height:100px; " />
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.product_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.product_id }) |

                <a href="#" class="text-danger" name="product_id" data-id="@item.product_id">Delete</a>
            </td>
        </tr>
    }

</table>

<script src="~/Scripts/dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap5.js"></script>
<script>
    new DataTable('#myTable', {
        layout: {
            bottomStart: {
                info: {

                }
            }
        }
    });

      $(document).ready(function () {
            $(".delete-product").click(function (e) {
                e.preventDefault();
                var productId = $(this).data("id");
                var dataRow = $('#'+productId);
                if (confirm("Are you sure you want to delete this product?")) {
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("Delete", "Product")',
                        data: { id: productId },
                        success: function (response) {
                            if (response.success) {
                                alert(response.message);
                                dataRow.remove();
                            } else {
                                alert(response.message);
                            }
                        },
                        error: function () {
                            alert("An error occurred while deleting the product. Please try again.");
                        }
                    });
                }
            });
        });
</script>
