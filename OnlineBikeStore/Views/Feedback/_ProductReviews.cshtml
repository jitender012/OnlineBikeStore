@model OnlineBikeStore.Models.FeedbackViewModel2
@{
    Layout = null;
}
@*image viewer jquery plugin*@
<link href="~/cwa-lightbox-gallery/cwa_lightbox/css/cwa_lightbox_css.css" rel="stylesheet" />
<div class="content-row mt-2">
    <b>Customer Reviews</b>    
</div>
@foreach (var item in Model.feedbacks)
{
    <div class="content-box flex-column">
        <div class="d-flex align-items-center">
            <div class="img-container">
                <img src="~/Images/Utilities/user-icon.png" style="width:25px" />
            </div>
            <span>@item.customer_name</span>
        </div>
        <div>
            <div class="d-flex align-items-center">
                <div>
                    <div class="d-flex stars" style="text-shadow: 0px 0px 1px BLACK;" value="@item.ratingValue"> </div>
                </div>
                <div class="ms-2">
                    <b>
                        @if (item.ratingValue == 1)
                        {
                            <span>Very Poor</span>

                        }
                        @if (item.ratingValue == 2)
                        {

                            <span>Poor</span>
                        }
                        @if (item.ratingValue == 3)
                        {

                            <span>Decent</span>
                        }
                        @if (item.ratingValue == 4)
                        {

                            <span>Good!</span>
                        }
                        @if (item.ratingValue == 5)
                        {
                            <span>Excellent!!</span>

                        }
                        @if (item.product_img != null)
                        {
                            <img src="@Url.Content(item.product_img)" width="60" />
                        }
                    </b>
                </div>
            </div>

            <div class="ps-1">
                @if (item.image_url != null)
                {
                    <a class="cwa-lightbox-image" href="@Url.Content(item.image_url)">                        
                    <img src="@Url.Content(item.image_url)" width="70" />
                    </a>
                }
                <br />
                @item.feedback_text
                <br />
                <span class="text-style1">Reviewed on @item.date.ToString("D")</span>
            </div>
        </div>
    </div>
}

@*image viewer jquery plugin*@
<script src="~/cwa-lightbox-gallery/cwa_lightbox/javascript/cwa_lightbox_v1.js"></script>
<script src="~/cwa-lightbox-gallery/cwa_lightbox_(jquery with css)/javascript/cwa_lightbox_bundle_v1.js"></script>
<script>
    $(document).ready(function () {
        $('.stars').jsRapStar({
            enabled: false,
            length: 5
        });
    })
</script>