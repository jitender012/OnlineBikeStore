@model List<OnlineBikeStore.Models.FeedbackViewModel>
@{
    Layout = null;
}

<div>
    <div class="d-flex justify-content-between mb-1">
        <span>
            My Reviews
        </span>

    </div>
    <div class="">
        @foreach (var item in Model)
        {
            <div class="content-row d-flex" onclick="product()">
                @if (item.product_img != null)
                {
                    <img src="@Url.Content(item.product_img)" width="60" />
                }
                <div class="p-3">
                    @item.product_name
                    <br />
                    @item.ratingValue
                    <br />
                    @item.feedback_text
                    <br />
                    @if (item.image_url != null)
                    {
                        <img src="@Url.Content(item.image_url)" width="70" />
                    }
                    <br />
                    @item.date.ToString("Dx")
                </div>
                <p style="text-align:end">Remove</p>
            </div>
        }
    </div>
</div>

