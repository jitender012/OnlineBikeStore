@model List<OnlineBikeStore.Models.ProductViewModel>
@{
    ViewBag.Title = "FeedbackSuccess";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">


<style>

    .parent {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .abc {
        display: flex;
        flex-direction: column;
        margin: 1rem;
        padding: 1rem;
        justify-items: center;
        align-items: center;
        /*border: .1pc solid forestgreen;*/
        border: 2px solid forestgreen;
        border-radius: 5px;
    }

    .image-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100px;
        height: 100px;
        padding: 15px;
    }

    img {
        width: 100%;
        /*max-width: 200px; */
        height: auto;
        object-fit: cover;
    }

    .item-div {
        background-color: white;
        box-shadow: 0px 0px 6px -5px;
        border: 1px solid lightgray;
        border-radius: 5px;
    }
</style>

<div class="parent">

    <div class="abc">
        <i class="far fa-check-circle" style=" color: forestgreen; height: 40px; width: 40px;"></i>
        <h3 style="color:forestgreen" class="my-2">Feedback Submitted!</h3>
    </div>

    <div class="row w-75 ">

        @if (Model != null)
        {
            <div class="mt-3 mb-2">
                <h4>Review More Products</h4>
            </div>
            foreach (var product in Model)
            {
                <div class="col-12 col-lg-6  mb-3 justify-content-center">
                    <a href="@Url.Action("AddUpdateFeedback","feedback", new {pId = product.product_id})">
                        <div class=" d-flex item-div align-items-center">
                            <div class="image-container">
                                <img src="@Url.Content(product.url)" class="" />
                            </div>
                            <span>@product.product_name</span>

                        </div>
                    </a>
                </div>
            }
        }

    </div>

</div>
