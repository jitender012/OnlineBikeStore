@model OnlineBikeStore.Models.OrderDetailsViewModel
@{
    ViewBag.Title = "OrderDetails";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<link href="~/Content/Customer/order_details.css" rel="stylesheet" />
<div class="container">
    <div>
        <a style=" color: #6ebb4a; font-size: 14px; font-weight: 600;">
            Home
            <i class="fas fa-angle-right" style="color: #c1cdc2;"></i>
            My Account
            <i class="fas fa-angle-right" style="color: #c1cdc2;"></i>


        </a>
        <h4>
            My Order
        </h4>
    </div>
    <div class="content-box">
        <div class="row w-100">
            <div class="col-12 col-xl-5">
                <h4>Delivery Address</h4>
                <span>@Model.userDetails.first_name @Model.userDetails.last_name</span><br />
                <p>
                    @Model.userDetails.street, @Model.userDetails.city, @Model.userDetails.state, @Model.userDetails.zip_code
                </p>
                <br />
                <span>Mobile number: @Model.userDetails.phone</span>
            </div>
            <div class="col-8 col-xl-4">
                @switch (Model.order_status)
                {
                    case 0:
                        <h6>Order Placed</h6>
                        <p>Expected Date: @Model.required_date.ToString("D")</p>
                        break;
                    case 1:
                        <h6>Order Shipped</h6>
                        <p>Expected Date: @Model.required_date.ToString("D")</p>
                        break;
                    case 2:
                        <h6>Order Delivered</h6>
                        break;
                    case 3:
                        <h6>Order Cancelled</h6>
                        break;
                    case 4:
                        <h6>Order Returned</h6>
                        break;
                    default:
                        @:Unknown Status
                        break;
                }
            </div>
            <div class="col-4 col-xl-3 d-flex flex-column justify-content-around align-items-center">

                @if (Model.order_status == 0 || Model.order_status == 1)
                {<div>
                        <button class="btn btn-sm btn-dark">Download Invoice</button>
                    </div>
                    <div id="cancelBtnDiv">
                        <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">Cancel Order</button>
                    </div>
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Deletion</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to cancel this Order?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                    <button type="button" class="btn btn-danger" id="confirmDelete" data-bs-target="#confirmDeleteModal" onclick="cancelOrder(@Model.order_id)">Yes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @if (Model.order_status == 2)
                {
                    <div>
                        <button class="btn btn-sm btn-primary">Return Product</button>
                    </div>
                }

            </div>
        </div>
    </div>

    @foreach (var item in Model.orderItems.OrderByDescending(x => x.item_id))
    {
        <div class="content-box">
            <div class="d-flex">
                <div class="card1-imgdiv p-3 ">
                    @if (item.productDetails.url != null)
                    {
                        <img class="card1-img" src="@Url.Content(@item.productDetails.url)" />
                    }
                    else
                    {
                        <img class="card1-img" src="~/Images/Utilities/No-Image-Placeholder.svg.png" />
                    }
                </div>
                <div class="p-3 ms-xl-5 product-text">
                    @item.productDetails.product_name
                    <br />
                    ₹@item.productDetails.list_price
                </div>
            </div>
            <div>

            </div>
            <div>
                @if (Model.order_status == 2)
                {
                    <h4 style="color:cornflowerblue">
                        <a href="@Url.Action("AddUpdateFeedback","feedback", new {pId = item.productDetails.product_id})">

                            Rate and Review Product
                        </a>
                    </h4>
                }

            </div>
        </div>
    }
</div>



<script>
    function cancelOrder(oId) {
         $.ajax({
             url: "@Url.Action("UpdateOrderStatus", "Order")",
             data: {
                 oID:oId,
                 oStatus: 3
             },
             type: "POST",
             success: function (response) {
                 if (response.success) {
                     $('#exampleModal').modal('hide')
                     $('#cancelBtnDiv').html('<span class="text-muted">Order Cancelled</span>');
                 }
                 else {
                     $('#exampleModal').modal('hide')
                     alert(response.message)
                 }
             },
             error: function () {
                 $('#exampleModal').modal('hide')
                     alert("Something went wrong.")
             }
        })
    }
</script>