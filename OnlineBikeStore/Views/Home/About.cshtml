@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<section class="py-5 bg-light">
    <div class="container">
        <h1 class="text-center mb-4">About Us</h1>
        <div class="row align-items-center">
            <div class="col-md-6">
                <img src="https://via.placeholder.com/500" class="img-fluid" alt="Online Bike Store">
            </div>
            <div class="col-md-6">
                <h2>Who We Are</h2>
                <p>
                    Welcome to <strong>OnlineBikeStore</strong>, your number one source for all things bikes.
                    We’re dedicated to providing you the very best of bicycles, with an emphasis on quality, affordability, and exceptional customer service.
                </p>
                <p>
                    Founded in 2023, OnlineBikeStore has come a long way from its beginnings. We now serve customers all over the country and are thrilled to turn our passion for biking into a thriving online store.
                </p>
                <p>
                    We hope you enjoy our products as much as we enjoy offering them to you. If you have any questions or comments, please don't hesitate to contact us.
                </p>
                <h5>Our Mission</h5>
                <p>
                    To provide top-quality bikes that bring joy to riders of all ages and experience levels.
                </p>
                <a href="@Url.Action("Home","Home")" class="btn btn-primary mt-3">Shop Now</a>
            </div>
        </div>
    </div>
</section>