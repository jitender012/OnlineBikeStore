@model IEnumerable<OnlineBikeStore.Models.ProductViewModel>
@{

    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
@*<a href="~/Views/Partial_Views/_NavWithCategories.cshtml">~/Views/Partial_Views/_NavWithCategories.cshtml</a>*@

<style>
    .starStyle {
        text-decoration: none;
        color: #ffd100;
    }
    a {
        text-decoration: none;
        color:black
    }
</style>
<div class="ads-grid  ">
    <div class="container-fluid">

        @*@Html.Partial("~/Views/Partial_Views/_NavWithCategories.cshtml")*@
        <div class="row">
            <div class="col-lg-2 col-sm-4 col-md-3 mt-lg-0 mt-4 me-1 p-lg-0 border-right shadow-sm">
                <div class="side-bar p-sm-4 p-3">
                    <div class="py-2">
                        <h4 class=" mb-3">Filters</h4>
                        <hr />
                    </div>
                    <!-- price -->
                    <div class="range border-bottom py-2">
                        <h5 class="mb-3">Price</h5>
                        <div class="w3l-range">
                            <ul style="text-decoration:none; list-style:none">
                                <li><a href="#">Under $1,000</a></li>
                                <li class="my-1"><a href="#">$1,000 - $5,000</a></li>
                                <li><a href="#">$5,000 - $10,000</a></li>
                                <li class="my-1"><a href="#">$10,000 - $20,000</a></li>
                                <li><a href="#">$20,000 - $30,000</a></li>
                                <li class="mt-1"><a href="#">Over $30,000</a></li>
                            </ul>
                        </div>
                    </div>


                    <!-- reviews -->
                    <div class="customer-rev border-bottom left-side py-2">
                        <h5 >Customer Review</h5>
                        <ul style="list-style:none">
                            <li>
                                <a href="#" class="starStyle">
                                    @for (int i = 0; i < 5; i++)
                                    {
                                        <i class="fa fa-star"></i>
                                    }
                                    <span>5+</span>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="starStyle">
                                    @for (int i = 0; i < 4; i++)
                                    {
                                        <i class="fa fa-star"></i>
                                    }
                                    <span>4+</span>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="starStyle">
                                    @for (int i = 0; i < 3; i++)
                                    {
                                        <i class="fa fa-star"></i>
                                    }
                                    <span>3+</span>
                                </a>
                            </li>
                        </ul>
                    </div>

                    <!-- product type-->
                    <div class="left-side border-bottom py-2">
                        <h5 >Type</h5>
                        <div>
                            <input type="checkbox" value="1" class="">
                            <span class="span">Bikes</span>
                        </div>
                        <div>
                            <input type="checkbox" value="2" class="">
                            <span class="span">Accessories</span>
                        </div>
                    </div>

                  

                    <!-- arrivals -->
                    <div class="left-side border-bottom py-2">
                        <h3 ">New Arrivals</h3>
                        <div>

                            <input type="checkbox" class="">
                            <span class="span">Last 30 days</span>

                        </div>

                        <div>
                            <input type="checkbox" class="">
                            <span class="span">Last 90 days</span>
                        </div>

                    </div>                 
                </div>               
            </div>

            <div class="col-12 col-lg-8">
                @Html.Partial("_SearchPartial", Model)
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

    })
</script>