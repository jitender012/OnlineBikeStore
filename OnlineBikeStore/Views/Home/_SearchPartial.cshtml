@model IEnumerable<OnlineBikeStore.Models.ProductViewModel>

@if (Model.Count() < 1)
{
    <div class="text-center m-4">

        <h5>No Result Found!</h5>

    </div>

}
else
{
    <div class=" col-10 col-sm-8 col-md-9 col-lg-10">
        <div class="wrapper">
            <!-- first section -->
            <div class=" px-sm-4 px-3 py-sm-5  py-3 mb-4">

                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-6 col-md-4 col-lg-3  mt-5">
                            <div class="">
                                <div class="men-thumb-item text-center">
                                    <a href="@Url.Action("Product", "Home",new {pId= @item.product_id })" target="_blank">
                                        @if (item.url != null)
                                        {
                                            <img src="@Url.Content(item.url.ToString())" height="180" width="180" alt="">

                                        }
                                        else
                                        {

                                            <img src="~/Images/Utilities/No-Image-Placeholder.svg.png" height="180" width="180" alt="No Image">
                                        }
                                    </a>

                                </div>
                                <div class="item-info-product text-center border-top mt-4">
                                    <h4 class="pt-1">
                                        <a href="single.html">@item.product_name</a>

                                    </h4>
                                    <h4>@item.product_id</h4>
                                    <div class="info-product-price my-2">
                                        <span class="item_price">@item.list_price</span>
                                        <del>$280.00</del>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
}
