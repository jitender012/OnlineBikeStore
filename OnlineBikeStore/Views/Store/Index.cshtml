
@model IEnumerable<OnlineBikeStore.Models.StoreViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Display TempData messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["NotFound"] != null)
{
    <div class="alert alert-warning">
        @TempData["NotFound"]
    </div>
}
<div>
    <a style=" color: #6ebb4a; font-size: 14px; font-weight: 600;">
        Home
        <i class="fas fa-angle-right" style="color: #c1cdc2;"></i>

    </a>
    <h4>
        Stores
    </h4>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="display" id="myTable">
    <thead>
        <tr>
            <th>
                Store Name
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Zip Code
            </th>
            <th></th>
        </tr>
    </thead>


    @foreach (var item in Model)
    {
        <tr id="@item.store_id">
            <td>
                @Html.DisplayFor(modelItem => item.store_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.zip_code)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.store_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.store_id }) |

                <a href="#" class="btn btn-danger delete-store" name="store_id" data-id="@item.store_id">Delete</a>
            </td>
        </tr>
    }

</table>

<script>
    $(document).ready(
        function () {
            $('#myTable').DataTable();


        }

    )
      $(document).ready(function () {
            $(".delete-store").click(function (e) {
                e.preventDefault();
                var storeId = $(this).data("id");
                var dataRow = $('#'+storeId);
                if (confirm("Are you sure you want to delete this store?")) {
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("Delete", "Store")',
                        data: { id: storeId },
                        success: function (response) {
                            if (response.success) {
                                alert(response.message);
                                dataRow.remove();
                            } else {
                                alert(response.message);
                            }
                        },
                        error: function () {
                            alert("An error occurred while deleting the store. Please try again.");
                        }
                    });
                }
            });
        });
</script>
